<resources>
    <!-- Base application theme. -->
    <style name="Theme.TODOReminder" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowShowWallpaper">false</item>
        <!--        <item name="android:windowActivityTransitions">true</item>-->
<!--        <item name="android:windowEnterTransition">@android:transition/slide_left</item>-->
<!--        <item name="android:windowExitTransition">@android:transition/slide_right</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TODOReminder.Splash" parent="Theme.TODOReminder">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TextAppearance.Shrine.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/themeBlue</item>
    </style>

    <style name="Widget.SignIN.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:paddingBottom">8dp</item>
        <item name="hintTextAppearance">@style/TextAppearance.Shrine.TextInputLayout.HintText</item>
        <item name="boxStrokeColor">@color/themeBlue</item>
        <item name="colorPrimaryDark">@color/text_color_dark</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorControlNormal">@color/text_color_dark</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="Widget.SkipBtn.OutlinedTransparent" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:text">Skip</item>
    </style>

    <style name="Widget.NextBtn.Filled" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
<!--        <item name="android:textAlignment">center</item>-->
<!--        <item name="android:gravity">center_horizontal</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/themeBlue</item>
        <item name="android:background">@color/themeBlue</item>
        <item name="android:text">Next</item>
    </style>
</resources>